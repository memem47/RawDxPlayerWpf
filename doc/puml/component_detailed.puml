  component "RawDxPlayerWpf\n(WPF)" as WPF
}

package "Rendering" {
  component "DxRenderer\n(C#)" as DX
}

package "Interop" {
  component "ImageProcApi\n(C++/CLI)" as CLI
}

package "Native Processing" {
  component "NativeImageProcessor\n(C++)" as CPP
