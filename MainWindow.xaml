<Window x:Class="RawDxPlayerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RawDxPlayerWpf" Width="1100" Height="800"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="8" LastChildFill="False">
            <Button Content="Open..." Width="90" Margin="0,0,8,0" Click="BtnOpen_Click"/>
            <Button Content="Play" Width="90" Margin="0,0,8,0" Click="BtnPlay_Click"/>
            <Button Content="Stop" Width="90" Margin="0,0,8,0" Click="BtnStop_Click"/>

            <TextBlock VerticalAlignment="Center" Margin="12,0,6,0" Text="FPS:"/>
            <TextBox x:Name="TbFps" Width="60" Text="30" Margin="0,0,12,0"/>

            <TextBlock VerticalAlignment="Center" Margin="12,0,6,0" Text="Window:"/>
            <TextBox x:Name="TbWindow" Width="80" Text="30000" Margin="0,0,12,0"/>

            <TextBlock VerticalAlignment="Center" Margin="12,0,6,0" Text="Level:"/>
            <TextBox x:Name="TbLevel" Width="80" Text="30000"/>
        </DockPanel>

        <Border Grid.Row="1" Margin="8" BorderBrush="Gray" BorderThickness="1">
            <Image x:Name="ImgView" Stretch="Uniform" SnapsToDevicePixels="True"/>
        </Border>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="TbStatus" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
